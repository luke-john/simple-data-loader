{
    "compilerOptions": {
        "removeComments": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "jsx": "react",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "paths": {},
        "baseUrl": "..",
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "../**/*.d.ts",
        "../**/*.tsx",
        "../**/*.ts"
    ]
}
